{% extends 'base.html.twig' %}
{% block title %}{{producto.titulo}}{% endblock %}

{% block body %}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }
    .header-container {
        background-color: rgb(255, 0, 0);
        color: white;
        padding: 15px;
    }
    a {
        all: unset;  /* Elimina todos los estilos predeterminados */
        display: inline;  /* Vuelve a su comportamiento normal */
        cursor: pointer;
    }
    .main-content {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .producto-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }
    img {
        width: 350px;
        height: 400px;
        object-fit: cover;
        border-bottom: 1px solid #ddd;
    }
</style>

<header>
    <div class="header-container">
        <h1><a href='/'>Tienda online</a></h1>
    </div>
</header>

<main>
    <div class='producto-container'>
        <div class='img-container'>
            <img src="{{ asset('uploads/files/' ~ producto.foto) }}" alt="{{ producto.titulo }}">
        </div>
        <div class='details-container'>
            <ul>
                <li>{{producto.titulo}}</li>
                <li>{{producto.descripcion}}</li>
                <li>{{producto.precio}}â‚¬</li>
            </ul>
        </div>
        
    </div>
    <hr>
</main>








{%  endblock  %}